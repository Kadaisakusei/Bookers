<h1>Books</h1>

<table>

<% @books.each do |book| %>

<tr>
    <td><%= book.title %></td>
    <td><%= book.body %></td>

    <td><%= link_to 'Show', edit_book_path(book.id) %></td>
    <td><%= link_to 'Edit', book_path(book.id) %></td>
    <td><%= link_to 'Destroy', book, method: :destroy, data: { confirm: '削除してよろしいですか?' } %></td>
</tr>


<% end %>


</table>